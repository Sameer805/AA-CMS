        <script>

            $(document).ready(function () {
                getUsers();
            });
            function addVenueModal() {
                $("#addUserModal").modal();
            }
            function editName() {

                $.ajax({
                    type: "GET",
                    url: "EditVenue",
                    data: { "id":  $("#IDEdit").val(),"name":  $("#venuename").val() },
                    contentType: 'application/json; charset=utf-8',

                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        console.log(XMLHttpRequest);
                    },
                    success: function (result) {

                        swal("Venue Edited!", "" , "success").then(function () {
                            $("#venueEdit").modal('hide');
                            getUsers();

                        });

                    }
                });

            }
            function validate() {
                $("#venue").removeAttr("style");
                var username = $("#venue").val();
                $("#venue").val("");
                if (username == "" || username == null) {
                    $("#venue").css("border","1px solid red");
                    return;
                }

                
                $.ajax({
                    type: "GET",
                    url: "checkVenue",
                    data: { "venue": username },
                     dataType: "json",
                    contentType: 'application/json; charset=utf-8',

                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        console.log(XMLHttpRequest);
                    },
                    success: function (result) {
                        console.log(result);
                        if (result == "False") {
                            swal("Venue Already Exists!", "", "error").then(function () {
                                
                $("#venue").val("");

                            });

                        }
                        else {
                             $.ajax({
                    type: "GET",
                    url: "AddVenue",
                    data: { "name": username },
                    contentType: 'application/json; charset=utf-8',

                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        console.log(XMLHttpRequest);
                    },
                    success: function (result) {

                        swal("Venue Added!", "" , "success").then(function () {
                            $("#addUserModal").modal('hide');
                            getUsers();

                        });

                    }
                });

                        }
                        

                    }
                });


               
            }
            function getUsers() {
                $("#tbody_venue").empty();
                $.ajax({
                    type: "GET",
                    url: "FetchVenues",
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        console.log("Request: " + XMLHttpRequest.toString() + "\n\nStatus: " + textStatus + "\n\nError: " + errorThrown);
                    },
                    success: function (result) {
                        result.forEach(function (element, index) {


                            console.log(element.u);
                            var row = "<tr><td><center>" + element.u.name + "</center></td><td><center><button class='btn btn-sm btn-success edit'  id='" + element.u.id + "'><i class='fa fa-pencil'/> Edit</button><button class='btn btn-sm btn-danger' id='" + element.u.id + "'><i class='fa fa-trash'/> Delete</button></center></td></tr>";

                            $("#tbody_venue").append(row);
                        })
                    }
                });

            }

            $(document).on('click', '.btn-danger', function () {
                swal({
                    title: "Are you sure?",
                    text: "Do you want to delete this venue?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                    .then((willDelete) => {
                        if (willDelete) {
                            $.ajax({
                                type: "GET",
                                url: "DeleteVenue",
                                contentType: 'application/json; charset=utf-8',
                                data: { id: this.id },
                                error: function (XMLHttpRequest, textStatus, errorThrown) {
                                    console.log("Request: " + XMLHttpRequest.toString() + "\n\nStatus: " + textStatus + "\n\nError: " + errorThrown);
                                },
                                success: function (result) {
                                    swal("Venue Deleted!", "", "success").then(function () {
                                        getUsers();
                                    });
                                }
                            });


                        }
                    });

            });
            $(document).on('click', '.edit', function () {
                //Name:
                //<input type="text" id="venuename" />
                
                $("#venueEdit").modal();
                     $.ajax({
                    type: "GET",
                    url: "FetchVenue",
                    dataType: 'json',
                    data: {id: this.id},
                    contentType: 'application/json; charset=utf-8',

                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        console.log(XMLHttpRequest);
                    },
                         success: function (result) {
                             $("#IDEdit").val(result[0].id);
                        $("#venuename").val(result[0].name);

                    }
                });
            });

            
            $(document).ready(function () {
                
                
            });
        </script>
