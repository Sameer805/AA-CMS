        <script>
            $(document).ready(function() {
                $.ajax({
                type: "GET",
                url: "../Home/getEvents",
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                },
                success: function (result) {
                    for (var i = 0; i < result.length; i++) {
                        console.log(result[i]);
                        var row = "<tr><td>" + result[i].b.id + "</td><td>" + new Date(result[i].b.inserteddatetime).toDateString() + "</td><td>" + new Date(result[i].b.bookingDate).toDateString() + "</td><td>" + result[i].b.eventName + "</td><td>" + result[i].name + "</td><td>" + result[i].b.numberOfPersons + "</td><td>" + result[i].b.customerName + "</td><td>" + result[i].b.phonenumber + "</td><td>" + (result[i].b.isBooked == true ? "Booked" : "tentative") + "</td></tr>";
                        $("#events").append(row);
                    }
                     // Setup - add a text input to each footer cell

 
                    var table = $('#example').DataTable({
                        "pageLength": 500,
                        "lengthChange": false
                    });
                    $('.dataTables_filter input').unbind().bind('keyup', function () {
                        var searchTerm = this.value.toLowerCase(),
                            regex = '\\b' + searchTerm + '\\b';
                        table.rows().search(regex, true, false).draw();
                    });
                    $("#len").change(function () {
                        if ($(this).val() == 3) {
                            table.page.len(-1).draw();
                        }
                        else if ($(this).val() == 1) {
                             table.page.len(500).draw();
                        }
                        else if ($(this).val() == 2) {
                             table.page.len(100).draw();
                        }
                    });
   

                    // calendar.setDataSource(myData);

                }

            });
} );
